<UserControl x:Class="SchoolLanguage.Components.PhotoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLanguage.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1">
         <StackPanel>
            <Image Source="{Binding PhotoByte}" x:Name="ImageImg" Height="100"></Image>
            <StackPanel VerticalAlignment="Center">
                <Button x:Name="MainBtn" Click="MainBtn_Click">Сделать главным</Button>
                <Button x:Name="DeleteBtn" Click="DeleteBtn_Click">Удалить</Button>
            </StackPanel>
         </StackPanel>
        </Border>   
    </Grid>
</UserControl>
